PROJECT_NAME  = Mint
PROJECT_BRIEF = "Mint: Mesh Infrastructure Toolkit"
INPUT = @PROJECT_SOURCE_DIR@/src/components/mint/src \
        @PROJECT_SOURCE_DIR@/src/components/mint/src/fem \
        @PROJECT_SOURCE_DIR@/src/components/mint/src/fem/shape_functions \
        @PROJECT_SOURCE_DIR@/src/components/mint/src/fem/shape_functions/lagrange \
        @PROJECT_SOURCE_DIR@/src/components/mint/src/mesh \
        @PROJECT_SOURCE_DIR@/src/components/mint/src/utils
GENERATE_XML = YES
USE_MATHJAX = YES
MATHJAX_RELPATH = https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.2
FILE_PATTERNS += *.md *.markdown *.cpp *.hpp
TAB_SIZE               = 2
INLINE_INHERITED_MEMB  = YES
BUILTIN_STL_SUPPORT    = YES
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
#TYPEDEF_HIDES_STRUCT  = NO
GENERATE_TREEVIEW      = YES
GENERATE_LATEX         = NO
GENERATE_XML           = NO
GENERATE_TAGFILE       = mint.tag
HAVE_DOT               = YES
#CALL_GRAPH            = YES
#CALLER_GRAPH          = YES
INTERACTIVE_SVG        = YES
DISTRIBUTE_GROUP_DOC   = YES
EXTRACT_PRIVATE        = YES
